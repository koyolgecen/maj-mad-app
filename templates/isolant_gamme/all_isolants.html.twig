{% extends 'base_datatable.html.twig' %}

{% set icon = 'fa-home' %}
{% set iconLabel = 'Isolants' %}

{% block title %}Isolants{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ isolants | length }}</span>
        Isolants
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('isolant_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter nouvel isolant
        </a>
    </div>

    <div class="mb-5">
        <table class="table table-striped table-bordered dt-responsive nowrap datatableCustom" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for isolant in isolants %}
                <tr>
                    <td>{{isolant.nom}}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ isolant.nom }}"
                           href="{{ path('isolant_edit', { 'id': isolant.id }) }}">
                            <i class="fas fa-edit fa-sm"></i>
                        </a>
                        <a class="btn btn-danger btn-sm ml-1 confirm"
                           data-to-delete="{{ isolant.nom }}"
                           data-toggle="tooltip" title="Supprimer {{ isolant.nom }}"
                           href="{{ path('isolant_delete', { 'id': isolant.id }) }}">
                            <i class="fas fa-trash fa-sm"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

