{% extends 'base_datatable.html.twig' %}

{% block title %}Qualités Huisseries{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ qualitesHuisseries | length }}</span>
        Qualités Huisseries
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('qualite_huisserie_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter une nouvelle qualité d'huisserie
        </a>
    </div>

    <div class="mb-5">
        <table class="table table-striped table-bordered dt-responsive nowrap datatableCustom" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for qualiteHuisserie in qualitesHuisseries %}
                <tr>
                    <td>{{qualiteHuisserie.nom}}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ qualiteHuisserie.nom }}"
                           href="{{ path('qualite_huisserie_edit', { 'id': qualiteHuisserie.id }) }}">
                            <i class="fas fa-edit fa-sm"></i>
                        </a>
                        <a class="btn btn-danger btn-sm ml-1 confirm"
                           data-to-delete="{{ qualiteHuisserie.nom }}"
                           data-toggle="tooltip" title="Supprimer {{ qualiteHuisserie.nom }}"
                           href="{{ path('qualite_huisserie_delete', { 'id': qualiteHuisserie.id }) }}">
                            <i class="fas fa-trash fa-sm"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

