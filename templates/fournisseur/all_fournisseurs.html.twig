{% extends 'base.html.twig' %}

{% block title %}Fournisseurs{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap4.min.css">
{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ fournisseurs | length }}</span>
        Fournisseurs
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('app_fournisseur_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter nouveau fournisseur
        </a>
    </div>
    <div class="mb-5">
        <table id="fournisseurs" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Mail</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>Code Postale</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for fournisseur in fournisseurs %}
                <tr>
                    <td>{{fournisseur.nom}}</td>
                    <td>{{fournisseur.mail}}</td>
                    <td>{{fournisseur.telephone}}</td>
                    <td>{{fournisseur.adresse}}</td>
                    <td>{{fournisseur.codePostale}}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ fournisseur.nom }}"
                           href="{{ path('app_fournisseur_edit', { 'id': fournisseur.id }) }}">
                            <i class="fas fa-user-edit fa-sm"></i>
                        </a>

                        <a style="margin-left: 20px"
                           class="btn btn-danger delete-fournisseur"
                           data-toggle="tooltip" title="Supprimer {{ fournisseur.nom }}"
                           href="#"
                           data-id="{{ fournisseur.id }}"
                           >
                            <i class="fas fa-user-minus fa-sm"></i>
                            </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        $(document).ready(function() {
            $('#fournisseurs').DataTable();
        });
    </script>


{% endblock %}

