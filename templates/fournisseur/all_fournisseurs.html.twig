{% extends 'base_datatable.html.twig' %}

{% block title %}Fournisseurs{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ fournisseurs | length }}</span>
        Fournisseurs
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('fournisseur_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter nouveau fournisseur
        </a>
    </div>

    <div class="mb-5">
        <table class="table table-striped table-bordered dt-responsive nowrap datatableCustom" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Mail</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>Code Postale</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for fournisseur in fournisseurs %}
                <tr>
                    <td>{{fournisseur.nom}}</td>
                    <td>{{fournisseur.mail}}</td>
                    <td>{{fournisseur.telephone}}</td>
                    <td>{{fournisseur.adresse}}</td>
                    <td>{{fournisseur.codePostale}}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ fournisseur.nom }}"
                           href="{{ path('fournisseur_edit', { 'id': fournisseur.id }) }}">
                            <i class="fas fa-edit fa-sm"></i>
                        </a>
                        <a class="btn btn-danger btn-sm ml-1 confirm"
                           data-to-delete="{{ fournisseur.nom }}"
                           data-toggle="tooltip" title="Supprimer {{ fournisseur.nom }}"
                           href="{{ path('fournisseur_delete', { 'id': fournisseur.id }) }}">
                            <i class="fas fa-trash fa-sm"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

