{% extends 'base_datatable.html.twig' %}

{% block title %}Caracteristiques{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ caracs | length }}</span>
        Caracteristiques
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('carac_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter nouvelle caract√©ristique de nature
        </a>
    </div>

    <div class="mb-5">
        <table class="table table-striped table-bordered dt-responsive nowrap datatableCustom" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for carac in caracs %}
                <tr>
                    <td>{{ carac.nomCaracNature }}</td>
                    <td>{{ carac.descCaracNature }}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ carac.nomCaracNature }}"
                           href="{{ path('carac_edit', { 'id': carac.id }) }}">
                            <i class="fas fa-edit fa-sm"></i>
                        </a>
                        <a class="btn btn-danger btn-sm ml-1 confirm"
                           data-to-delete="{{ carac.nomCaracNature }}"
                           data-toggle="tooltip" title="Supprimer {{ carac.nomCaracNature }}"
                           href="{{ path('carac_delete', {'id': carac.id })}}">
                            <i class="fas fa-trash fa-sm"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

