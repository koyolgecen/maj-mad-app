{% extends 'base.html.twig' %}

{% set icon = 'fa-users' %}
{% set iconLabel = 'Utilisateurs' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block body %}
    <h1 class="text-center">{{ h1 }}</h1>
    {{ form_start(form, {
        'attr': {'class': 'form-custom' }
    }) }}
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.nom) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.prenom) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.login) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.plainPassword) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {% if form.roles is defined %}
                {{ form_row(form.roles) }}
            {% endif %}
        </div>
    </div>
    <div class="row text-center">
        <div class="col-md-12 mt-3 mb-3">
            <button type="submit" class="btn btn-success">Enregistrer</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}