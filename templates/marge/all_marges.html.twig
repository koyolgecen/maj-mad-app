{% extends 'base.html.twig' %}

{% block title %}Marges{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap4.min.css">
{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ marges | length }}</span>
        Marges
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('app_marge_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter une nouvelle marge
        </a>
    </div>
    <div class="mb-5">
        <table id="marges" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Marge entreprise</th>
                <th>Marge commerciale</th>
            </tr>
            </thead>
            <tbody>
            {% for marge in marges %}
                <tr>
                    <td>{{marge.nom}}</td>
                    <td>{{marge.MargeEntreprise}}</td>
                    <td>{{fournisseur.MargeCommerciale}}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ marge.nom }}"
                           href="{{ path('app_marge_edit', { 'id': marge.id }) }}">
                            <i class="fas fa-user-edit fa-sm"></i>
                        </a>

                        <a style="margin-left: 20px"
                           class="btn btn-danger delete-marge"
                           data-toggle="tooltip" title="Supprimer {{ marge.nom }}"
                           href="#"
                           data-id="{{ marge.id }}"
                           >
                            <i class="fas fa-user-minus fa-sm"></i>
                            </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        $(document).ready(function() {
            $('#marges').DataTable();
        });
    </script>


{% endblock %}

