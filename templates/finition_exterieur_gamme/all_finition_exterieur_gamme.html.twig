{% extends 'base_datatable.html.twig' %}

{% block title %}Finitions Extérieures{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ finitionsExterieures | length }}</span>
        Finitions Extérieures
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('finition_exterieur_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter une nouvelle finition exterieure
        </a>
    </div>

    <div class="mb-5">
        <table class="table table-striped table-bordered dt-responsive nowrap datatableCustom" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for finitionExterieure in finitionsExterieures %}
                <tr>
                    <td>{{finitionExterieure.nom}}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ finitionExterieure.nom }}"
                           href="{{ path('finition_exterieur_edit', { 'id': finitionExterieure.id }) }}">
                            <i class="fas fa-edit fa-sm"></i>
                        </a>
                        <a class="btn btn-danger btn-sm ml-1 confirm"
                           data-to-delete="{{ finitionExterieure.nom }}"
                           data-toggle="tooltip" title="Supprimer {{ finitionExterieure.nom }}"
                           href="{{ path('finition_exterieur_delete', { 'id': finitionExterieure.id }) }}">
                            <i class="fas fa-trash fa-sm"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

