{% extends 'base_datatable.html.twig' %}

{% block title %}CCTP{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ cctp | length }}</span>
        CCTP
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('cctp_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter nouveau CCTP
        </a>
    </div>

    <div class="mb-5">
        <table class="table table-striped table-bordered dt-responsive nowrap datatableCustom" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Longueur</th>
                <th>Largeur</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for cctp in cctp %}
                <tr>
                    <td>{{cctp.nom}}</td>
                    <td>{{cctp.longueur}}</td>
                    <td>{{cctp.largeur}}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ cctp.nom }}"
                           href="{{ path('cctp_edit', { 'id': cctp.id }) }}">
                            <i class="fas fa-edit fa-sm"></i>
                        </a>
                        <a class="btn btn-danger btn-sm ml-1 confirm"
                           data-to-delete="{{ cctp.nom }}"
                           data-toggle="tooltip" title="Supprimer {{ cctp.nom }}"
                           href="{{ path('cctp_delete', { 'id': cctp.id }) }}">
                            <i class="fas fa-trash fa-sm"></i>
                        </a>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

