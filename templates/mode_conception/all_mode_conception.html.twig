{% extends 'base_datatable.html.twig' %}

{% block title %}Modes de conception{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ modesConception | length }}</span>
        Modes de conception
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('mode_conception_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter un nouveau mode de conception
        </a>
    </div>

    <div class="mb-5">
        <table class="table table-striped table-bordered dt-responsive nowrap datatableCustom" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>RÃ¨gle de calcul</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for modeConception in modesConception %}
                <tr>
                    <td>{{modeConception.type}}</td>
                    <td>{{modeConception.RegleCalcul}}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ modeConception.type }}"
                           href="{{ path('mode_conception_edit', { 'id': modeConception.id }) }}">
                            <i class="fas fa-edit fa-sm"></i>
                        </a>
                        <a class="btn btn-danger btn-sm ml-1 confirm"
                           data-to-delete="{{ modeConception.type }}"
                           data-toggle="tooltip" title="Supprimer {{ modeConception.type }}"
                           href="{{ path('mode_conception_delete', { 'id': modeConception.id }) }}">
                            <i class="fas fa-trash fa-sm"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

