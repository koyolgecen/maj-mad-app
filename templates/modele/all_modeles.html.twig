{% extends 'base_datatable.html.twig' %}

{% set icon = 'fa-lightbulb' %}
{% set iconLabel = 'Modèles' %}

{% block title %}Modèles{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ modeles | length }}</span>
        Modèles
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('modele_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter nouveau modèle
        </a>
    </div>

    <div class="mb-5">
        <table class="table table-striped table-bordered dt-responsive nowrap datatableCustom" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Modules</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for modele in modeles %}
                <tr>
                    <td>{{ modele.nom }}</td>
                    <td>{% for module in modele.modules %}{{ module }}<br>{% endfor %}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ modele.nom }}"
                           href="{{ path('modele_edit', { 'id': modele.id }) }}">
                            <i class="fas fa-edit fa-sm"></i>
                        </a>
                        <a class="btn btn-danger btn-sm ml-1 confirm"
                           data-to-delete="{{ modele.nom }}"
                           data-toggle="tooltip" title="Supprimer {{ modele.nom }}"
                           href="{{ path('modele_delete', { 'id': modele.id }) }}">
                            <i class="fas fa-trash fa-sm"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

