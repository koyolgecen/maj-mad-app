{% extends 'base_datatable.html.twig' %}

{% block title %}Modules à réaliser{% endblock %}

{% set icon = 'fa-cubes' %}
{% set iconLabel = 'Modules à réaliser' %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ modules | length }}</span>
        Modules à réaliser pour le projet - {{ projet }}
    </h1>

    <div class="mb-5">
        <table class="table table-striped table-bordered dt-responsive nowrap datatableCustom" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Longueur</th>
                <th>Largeur</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for module in modules %}
                <tr>
                    <td>{{ module.nom }}</td>
                    <td>{{ module.longueur }}&nbsp;</td>
                    <td>{{ module.largeur }}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ module.nom }}"
                           href="{{ path('module_ar_edit', { 'id': module.id, 'projetId': module.projetId }) }}">
                            <i class="fas fa-edit fa-sm"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

