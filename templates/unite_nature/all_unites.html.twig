{% extends 'base_datatable.html.twig' %}

{% block title %}Unites{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ unites | length }}</span>
        Unites
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('unite_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter nouvelle unite de nature
        </a>
    </div>

    <div class="mb-5">
        <table class="table table-striped table-bordered dt-responsive nowrap datatableCustom" style="width:100%">
            <thead>
            <tr>
                <th>Description</th>
                <th>Usage</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for unite in unites %}
                <tr>
                    <td>{{ unite.descUniteNature }}</td>
                    <td>{{ unite.uniteUsageNature }}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ unite.descUniteNature }}"
                           href="{{ path('unite_edit', { 'id': unite.id }) }}">
                            <i class="fas fa-edit fa-sm"></i>
                        </a>
                        <a class="btn btn-danger btn-sm ml-1 confirm"
                           data-to-delete="{{ unite.descUniteNature }}"
                           data-toggle="tooltip" title="Supprimer {{ unite.descUniteNature }}"
                           href="{{ path('unite_delete', {'id': unite.id })}}">
                            <i class="fas fa-trash fa-sm"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

