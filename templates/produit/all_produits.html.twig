{% extends 'base_datatable.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1 class="text-dark text-center mb-3">
        <span class="badge badge-pill badge-dark">{{ produits | length }}</span>
        Produits
    </h1>
    <div class="text-center mb-3">
        <a class="btn btn-success" href="{{ path('produit_add') }}">
            <i class="fas fa-plus mr-2"></i>Ajouter un nouveau produit
        </a>
    </div>

    <div class="mb-5">
        <table class="table table-striped table-bordered dt-responsive nowrap datatableCustom" style="width:100%">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Gamme</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td>{{produit.nom}}</td>
                    <td>{{produit.gamme}}</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm"
                           data-toggle="tooltip" title="Modifier {{ produit.nom }}"
                           href="{{ path('produit_edit', { 'id': produit.id }) }}">
                            <i class="fas fa-edit fa-sm"></i>
                        </a>
                        <a class="btn btn-danger btn-sm ml-1 confirm"
                           data-to-delete="{{ produit.nom }}"
                           data-toggle="tooltip" title="Supprimer {{ produit.nom }}"
                           href="{{ path('produit_delete', { 'id': produit.id }) }}">
                            <i class="fas fa-trash fa-sm"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

